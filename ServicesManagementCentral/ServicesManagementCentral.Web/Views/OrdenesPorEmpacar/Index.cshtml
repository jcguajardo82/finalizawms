@using ServicesManagement.Web.Models;
@{
    ViewBag.Title = "Ordenes Por Empacar";
    Layout = "~/Views/Shared/_Layout.cshtml";


}
<style>
    div.scroll_horizontal {
        width: 100%;
        overflow: auto;
    }
</style>

<div class="ibox-content p-xl" style="padding-top: 0px;padding-bottom: 0px;">
    <div class="row scroll_horizontal">
        <div class="col col-xs-12 col col-md-12 col col-lg-12 text-center">
            <h2>Ordenes Por Empacar</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12" style="padding-bottom:20px">
            <div class="col-sm-2">
                <span>Seleccione Archivo  :</span>
            </div>
            <div class="col-sm-3">
                <input class="form-control" type="file" name="importFile" id="importFile" />
            </div>
            <div class="col-sm-3">
                <input class="btn btn-primary" id="btnUpload" type="button" value="Subir Archivo" />
                <input class="btn btn-primary" id="btnEnviar" onclick="Enviar()" type="button" value="Enviar" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-11 col-md-11 col-lg-11">
            <table id="tblConsulta" class="table table-striped dataTable" style="width:100%">
                <thead>
                    <tr>
                        <th style="text-align:center;">Cantidad</th>
                        <th style="text-align:center;">PK</th>
                        <th style="text-align:center;">Referencia</th>
                        <th style="text-align:center;">Razón Social</th>
                        <th style="text-align:center;">Dirección 1 </th>
                        <th style="text-align:center;">Dirección 2</th>
                        <th style="text-align:center;">Colonia</th>
                        <th style="text-align:center;">Población</th>
                        <th style="text-align:center;">Codigo Postal</th>
                        <th style="text-align:center;">Telefono</th>
                        <th style="text-align:center;">Contacto</th>
                        <th style="text-align:center;">Tipo Guia</th>
                        <th style="text-align:center;">Vehiculo</th>
                        <th style="text-align:center;">Currier</th>
                        <th style="text-align:center;">Tienda</th>
                        <th style="text-align:center;">Receptor</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Session["lstOrdenesPorEmpacar"] != null)
                    {
                        foreach (var item in (List<OrdenPorEmpacarModel>)Session["lstOrdenesPorEmpacar"])
                        {
                            <tr>
                                <td>@item.Cantidad</td>
                                <td>@item.PK</td>
                                <td>@item.Referencia</td>
                                <td>@item.RazonSocial</td>
                                <td>@item.Direccion1</td>
                                <td>@item.Direccion2</td>
                                <td>@item.Colonia</td>
                                <td>@item.Poblacion</td>
                                <td>@item.CP</td>
                                <td>@item.Telefono</td>
                                <td>@item.Contacto</td>
                                <td>@item.TipoGuia</td>
                                <td>@item.Vehiculo</td>
                                <td>@item.Currier</td>
                                <td>@item.Tienda</td>
                                <td>@item.Receptor</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        
    </div>
    </div>
